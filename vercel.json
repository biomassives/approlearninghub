{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }, 
    {
      "src": "assets/*.(svg|webp|png|gif|jpg|jpeg)",
      "use": "@vercel/static"
    }, 
    { 
      "src": "*.(js|css|html)", 
      "use": "@vercel/static" 
    },
    {
      "src": "data/**/*.json",
      "use": "@vercel/static"
    }, 
  ],
  "routes": [
    {
      "src": "/modules/:context/:mod/",
      "dest": "/module.html?context=:context&mod=:mod"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
