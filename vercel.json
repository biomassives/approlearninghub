{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
    // Removed the builds for assets/**/* and data/**/*.json
    // because their contents, if static, should now be in public/
    // and handled automatically by Vercel.
  ],
  "routes": [
    {
      "src": "/modules/:context/:mod/",
      "dest": "/module.html?context=:context&mod=:mod" // Assuming public/module.html exists
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem" // Serves files from public/ (like index.html, style.css)
    },
    {
      "src": "/(.*)", // Generic fallback/rewrite
      "dest": "/$1"
    }
  ]
}
